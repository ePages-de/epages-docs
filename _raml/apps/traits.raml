- locale:
    queryParameters:
      locale:
        description: Represents the language code according to ISO 639-1 and the country code according to ISO 3166-1.
        example: en_US
        required : false
- currency:
    queryParameters:
      currency:
        description: Represents the currency code according to ISO 4217.
        example: EUR
- paged:
    queryParameters:
      page:
        description: The current page.
        type: integer
        minimum: 1
        default: 1
      resultsPerPage:
        description: The maximum number of items per page.
        type: integer
        minimum: 10
        default: 10
- direction:
    queryParameters:
      direction:
        description: Sorting Direction
        enum: [asc, desc]