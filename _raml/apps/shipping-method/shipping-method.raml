#%RAML 0.8
displayName: Shipping methods
description: The shipping method supposed to handle the shipment.
get:
  description: Returns the shipping methods of a shop.
  is: [ locale ]
  responses:
    200:
      body:
        application/json:
          example: !include examples/get_shipping_response.json
          schema: !include schema/get_shipping.schema.json
/{shippingMethodId}:
  displayName: Shipping method ID
  description: The unique identifier for the shipping method.
  uriParameters:
    shippingMethodId:
      description: The unique identifier for the shipping method.
      example: 52F221E0-36F6-DC4E-384A-AC1504050C04
  get:
    description: Returns the shipping methods of a shop.
    is: [ locale ]
    responses:
      200:
        body:
          application/json:
            example: !include examples/get_shipping_shippingid_response.json
            schema: !include schema/get_shipping_shippingid.schema.json
