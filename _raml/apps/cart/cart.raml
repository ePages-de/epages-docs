#%RAML 0.8
displayName: Carts
description: Operations on the carts of a shop.
post:
  description: Creates a cart for a shop.
  body:
    application/json:
      example: !include examples/input_cart.json
  responses:
    201:
      body:
        application/json:
          example: !include examples/carts_response.json

/{cartId}:
  displayName: Cart ID
  description: Retrieve a specific cart using its ID.
  get:
    description: Returns a specified cart from a shop.
    responses:
      200:
        body:
          application/json:
            example: !include examples/carts_response.json

  /line-items:
    displayName: Line items
    description: The line items within a cart.
    post:
      description: Creates an item in a cart.
      body:
        application/json:
          example: |
            {
              "productId": "prodGUID",
              "quantity": 1
            }
      responses:
        201:
          body:
            application/json:
              example: !include examples/carts_response.json

    /{lineItemId}:
      displayName: Line item ID
      description: The unique identifier of the line item.
      put:
        description: Modifies a specified line item in a cart.
        body:
          application/json:
            example: |
              {
                  "quantity": 3
              }
        responses:
          200:
            body:
              application/json:
                example: !include examples/carts_response.json
      delete:
        description: Deletes a specified line item from a cart.
        responses:
          200:
            body:
              application/json:
                example: !include examples/delete_carts_response.json

  /billing-address:
    displayName: Billing address
    description: The billing address a cart requires.
    put:
      description: Modifies the billing address for a cart.
      body:
        application/json:
          example: !include examples/input_address.json
      responses:
        200:
          body:
            application/json:
              example: !include examples/carts_response.json
        400:
          body:
            application/json:
              example: !include examples/put_carts_billing_response400.json
    delete:
      description: Deletes the billing address for a cart.
      responses:
        200:
          body:
            application/json:
              example: !include examples/delete_carts_billing_response.json

  /shipping-address:
    displayName: Shipping address
    description: The shipping address a cart requires.
    put:
      description: Modifies the shipping address for a cart.
      body:
        application/json:
          example: !include examples/input_address.json
      responses:
        200:
          body:
            application/json:
              example: !include examples/put_carts_shipping_response.json
        400:
          body:
            application/json:
              example: !include examples/put_carts_shipping_response400.json
    delete:
      description: Deletes the shipping address for a cart.
      responses:
        200:
          body:
            application/json:
              example: !include examples/delete_carts_shipping_response.json
