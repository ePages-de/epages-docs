#%RAML 0.8
  displayName: Summary of legal information
  get:
    description: Lists hyperlinks of legal information for a shop.
    is: [ locale ]
    responses:
      200:
        body:
          application/json:
            example: |
              {
                "contactInformation": {
                    "name": "Contact information",
                },
                "privacyPolicy": {
                    "name": "Privacy policy",
                },
                "rightsOfWithdrawal": {
                    "name": "Terms and Conditions",
                },
                "termsAndConditions": {
                    "name": "Right of withdrawal",
                },
                "links":
                    [
                        {
                            "rel": "contact",
                            "href": "http://<hostname>/rs/shops/DemoEp6/legal/contact-information"
                        },
                        {
                            "rel": "privacy",
                            "href": "http://<hostname>/rs/shops/DemoEp6/legal/privacy-policy"
                        },
                        {
                            "rel": "tac",
                            "href": "http://<hostname>/rs/shops/DemoEp6/legal/terms-and-conditions"
                        },
                        {
                            "rel": "withdrawal",
                            "href": "http://<hostname>/rs/shops/DemoEp6/legal/rights-of-withdrawal"
                        }
                    ],
              }
  /contact-information:
    displayName: Contact information of the shop
    get:
      description: Returns the contact information of a shop.
      is: [ locale ]
      responses:
        200:
          body:
            application/json:
              example: |
                {
                  "name": "Contact information",
                  "title": null,
                  "navigationCaption": "Contact information",
                  "shortDescription": "You adapt this text via the preview or data sheet view under the &quot;Content/Categories&quot; menu item of your Administration.",
                  "description": "<p>Account number: ...<p/>",
                  "company": "",
                  "contactPerson": "John Smith",
                  "contactPersonJobTitle": null,
                  "address": "Any Street 1<br />12345 Any City<br />Any State",
                  "phone": null,
                  "fax": null,
                  "email": "john.smith@epages.com"
                }
  /privacy-policy:
      displayName: Privacy policy of the shop
      get:
        description: Returns the privacy policy of a shop.
        is: [ locale ]
        responses:
          200:
            body:
              application/json:
                example: |
                    {
                        "name": "Privacy policy",
                        "title": null,
                        "navigationCaption": "Privacy policy",
                        "shortDescription": null,
                        "description": "You adapt this text via the preview or data sheet view under the &quot;Content/Categories&quot;..."
                    }
  /terms-and-conditions:
    displayName: Terms and conditions of the shop
    get:
      description: Returns the terms and conditions of a shop.
      is: [ locale ]
      responses:
        200:
          body:
            application/json:
              example: |
                  {
                      "name": "Terms and Conditions",
                      "title": null,
                      "navigationCaption": "Terms and Conditions",
                      "shortDescription": null,
                      "description": "You adapt this text via the preview or data sheet view under the &quot;Content/Categories&quot; menu item of your Administration."
                  }
  /rights-of-withdrawal:
      displayName: Rights of withdrawal of the shop
      get:
        description: Returns the customer rights of withdrawal of a shop.
        is: [ locale ]
        responses:
          200:
            body:
              application/json:
                example: |
                    {
                        "name": "Right of withdrawal",
                        "title": null,
                        "navigationCaption": "Right of withdrawal",
                        "shortDescription": null,
                        "description": "You adapt this text via the preview or data sheet view under the &quot;Content/Categories&quot; menu item of your Administration.<br /><br /> Indicate to customers their right of withdrawal."
                    }
